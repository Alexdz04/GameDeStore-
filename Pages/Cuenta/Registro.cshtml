@page
@model gamedestore.Pages.Cuenta.RegistroModel
@{
    ViewData["Title"] = "Registro de usuario";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h3 class="text-primary">Crear una nueva cuenta</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Usuario.nombreusuario" class="form-label">Nombre de usuario</label>
                            <input asp-for="Usuario.nombreusuario" class="form-control" />
                            <span asp-validation-for="Usuario.nombreusuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.correo" class="form-label">Correo electronico</label>
                            <input asp-for="Usuario.correo" class="form-control" />
                            <span asp-validation-for="Usuario.correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.contrasena" class="form-label">Contraseña</label>
                            <input asp-for="Usuario.contrasena" class="form-control" type="password" />
                            <span asp-validation-for="Usuario.contrasena" class="text-danger"></span>
                        </div>

                       
                        <div class="mb-3">
                            <label asp-for="Usuario.Rol" class="form-label">Tipo de cuenta</label>
                            <select asp-for="Usuario.Rol" class="form-control">
                                <option value="">-- Seleccionar rol --</option>
                                <option value="Cliente">Cliente</option>
                                <option value="Administrador">Administrador</option>
                            </select>
                            <span asp-validation-for="Usuario.Rol" class="text-danger"></span>
                        </div>
                        

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Registrarse</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="Login">Ya tienes una cuenta?? Inicia sesion</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
