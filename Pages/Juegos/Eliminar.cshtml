@page "{id:int}"
@model gamedestore.Pages.Juegos.EliminarModel
@{
    ViewData["Title"] = "Eliminar juego";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Confirmacion de eliminacion!!!!</h4>
                <p>seguro de que quieres eliminar permanentemente el juego <strong>@Model.Juego.nombre</strong>?</p>
                <hr>
                <p class="mb-0">No podras desahecer esta accion....</p>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Juego.id" />

                <div class="card">
                    <div class="card-header">
                        Detalles del juego a eliminar
                    </div>
                    <div class="card-body">
                        <p><strong>Nombre:</strong> @Model.Juego.nombre</p>
                        <p><strong>Genero:</strong> @Model.Juego.genero</p>
                        <p><strong>Precio:</strong> @Model.Juego.precio</p>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Si, eliminalo</button>
                    <a asp-page="Index" class="btn btn-secondary">No, cancela!!</a>
                </div>
            </form>
        </div>
    </div>
</div>
